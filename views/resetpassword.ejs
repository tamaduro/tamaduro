<%- include('partials/header') %>
<div class="form-container">
    <div class="logo-container">
        <div class="logo">
            <img class="logo-img" src="/img/ta_maduro.png" alt="TaMaduro"/>
        </div>
    </div>
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if(locals.success) { %>
        <form class="user-content-form" method="post">
            <div class="form-group">
                <input type="password" name="password" id="password" class="form-control" placeholder="Digite a sua nova senha"/>
            </div>
            <div class="form-group form-group--actions">
                <button type="submit" class="btn btn-login-action btn-block btn-primary">Salvar</button>
            </div>
        </form>
    <% } %>
</div>
<%- include('partials/footer') %>